<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.wordbook.test.TestResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/testResult"
            android:layout_width="186dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="Test 결과"
            android:textColor="@color/black"
            android:textSize="35sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="134dp" />

        <TextView
            android:id="@+id/correctCountTextview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.415" />

        <TextView
            android:id="@+id/howtestcount"
            android:layout_width="291dp"
            android:layout_height="64dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="개를 맞추셨습니다!"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.725"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testResult" />

        <Button
            android:id="@+id/moveToMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="106dp"
            android:text="메인 페이지로"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/howtestcount" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
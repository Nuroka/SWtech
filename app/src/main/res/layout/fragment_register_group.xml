<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterGroupFragment">

    <data>
        <variable
            name = "grouptitle"
            type = "com.example.wordbook.database.Group" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/registerGroupBtn"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginBottom="328dp"
            android:background="@color/green_100"
            android:text="추가"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="52dp"
            android:text="단어장 이름"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/registerGroupBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputGroupTitle"
            android:layout_width="264dp"
            android:layout_height="43dp"
            android:layout_marginBottom="44dp"
            android:background="@color/gray_input"
            android:ems="10"
            android:text="@{grouptitle.grouptitle}"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/registerGroupBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toEndOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>